{% extends 'public/public.html.twig' %}
{% block title %}Connexion{% endblock %}
{% block container %}
    <div class="m-5 mx-auto p-5">
        <h1 class="text-center my-4 m-5">Connexion</h1>
        <form method="POST"
              class="col-sm-12 col-md-8 col-lg-4 p-3 mx-auto p-5 background_body background_formmy-3 borderCo">

            <div>
                <div class="form-group mb-3">
                    <label class="descrip" for="email">Email:</label>
                    <input type="email" id="email" class="form-control" name="_username" placeholder="E-mail">

                </div>
                <div class="form-group">
                    <label class="descrip" for="password">Mot de passe:</label>
                    <input type="password" id="password" class="form-control" name="_password"
                           placeholder="Votre mot de passe">

                </div>
            </div>
            <div class="row">
                <div class="col text-left mt-5">
                    <a href="{{ path('users_new') }}" type="button" class="btn btn-dark text-white">Pas inscrit ?
                        Cliquez ici.</a>
                </div>
                <div class="col text-right mt-5">
                    <button type="submit" class="btn btn-dark text-white">Connexion</button>
                </div>
            </div>
        </form>

    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Commentaires index{% endblock %}

{% block body %}
    <h1>Commentaires index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Avis</th>
                <th>Date_add</th>
                <th>Date_delete</th>
                <th>Activate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.avis }}</td>
                <td>{{ commentaire.dateAdd ? commentaire.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commentaire.dateDelete ? commentaire.dateDelete|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commentaire.activate ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('commentaires_show', {'id': commentaire.id}) }}">show</a>
                    <a href="{{ path('commentaires_edit', {'id': commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commentaires_new') }}">Create new</a>
{% endblock %}

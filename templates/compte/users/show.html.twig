{% extends 'compte/compte.html.twig' %}

{% block title %}Users - Infos{% endblock %}

{% block container %}
    <div class="col mx-auto p-0 m-0 divBody">
        <h1 class="text-center m-5">INFOS PERSONNELLES</h1>
        <div>
            <form method="POST" action="" class="border border-dark form-group-row p-4 m-5 mx-auto formInfos">
                <div class="col">
                    <div class="form-group col">
                        <label class="descrip" for="name">Nom:</label>
                        <input type="text" class="form-control" readonly name="name" id="name" value="{{ user.nom }}">
                    </div>
                    <div class="form-group col">
                        <label class="descrip" for="fistName">Pr√©nom:</label>
                        <input type="text" class="form-control" readonly name="fistName" id="fistName" value="{{ user.prenom }}">
                    </div>
                    <div class="form-group col">
                        <label class="descrip" for="pseudo">Pseudo:</label>
                        <input type="text" class="form-control" readonly name="pseudo" id="pseudo" value="{{ user.pseudo }}">
                    </div>
                    <div class="form-group col">
                        <label class="descrip" for="email">E-mail:</label>
                        <input type="email" class="form-control" readonly name="email" id="email" value="{{ user.email }}">
                    </div>
                </div>
                <div class="text-right">
                    <a href="{{ path('users_edit', {'id': user.id}) }}" type="button" class="btn btn-dark">Modifier</a>
                </div>
            </form>
        </div>
    </div>
    </div>
    </div>
{% endblock %}

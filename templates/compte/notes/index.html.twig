{% extends 'base.html.twig' %}

{% block title %}Notes index{% endblock %}

{% block body %}
    <h1>Notes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Note</th>
                <th>Date_add</th>
                <th>Date_update</th>
                <th>Activate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.note }}</td>
                <td>{{ note.dateAdd ? note.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ note.dateUpdate ? note.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ note.activate ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('notes_show', {'id': note.id}) }}">show</a>
                    <a href="{{ path('notes_edit', {'id': note.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('notes_new') }}">Create new</a>
{% endblock %}

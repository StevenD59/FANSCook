{% extends 'compte/compte.html.twig' %}

{% block title %}Ajouter un ingredient{% endblock %}

{% block container %}
    <div class="col mx-auto p-0 m-0 divBody"  id="contentFav">
        <h1 class="text-center m-5">AJOUTER UN INGREDIENT</h1>
        <div>
            {{ form_start(form) }}
            <div class="border border-dark form-group-row p-4 m-5 mx-auto formInfos">
                <div class="col">
                    <div class="form-group col">
                        <label class="descrip" for="name">Nom de la recette:</label>
                        <input type="text" readonly class="form-control" name="name" id="name" value="{{ recettes.titre }}">
                    </div>
                    <div class="form-group col">
                        <label class="descrip" for="ingredient">Ingrédient:</label>
                        {{form_widget(form.nom)}}
                    </div>
                    <div class="form-group col">
                        <label class="descrip" for="quantite">Quantité:</label>
                        {{form_widget(form.quantite)}}
                    </div>
                </div>
                <div class="text-right">
                    <button type="submit" name="addIngredient" class="btn btn-dark">{{ button_label|default('Ajouter') }}</button>
                </div>
            </div>
            {{ form_start(form) }}
        </div>
        <div class="text-center m-5">
            <a class="btn btn-dark" href="{{ path('recettes_show', {'id': recettes.id}) }}">← Retour à recette en cours</a>
        </div>
    </div>
    </div>
    </div>
{% endblock %}

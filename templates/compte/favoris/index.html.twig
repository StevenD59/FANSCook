{% extends 'base.html.twig' %}

{% block title %}Favoris index{% endblock %}

{% block body %}
    <h1>Favoris index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_add</th>
                <th>Date_delete</th>
                <th>Activate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for favori in favoris %}
            <tr>
                <td>{{ favori.id }}</td>
                <td>{{ favori.dateAdd ? favori.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ favori.dateDelete ? favori.dateDelete|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ favori.activate ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('favoris_show', {'id': favori.id}) }}">show</a>
                    <a href="{{ path('favoris_edit', {'id': favori.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('favoris_new') }}">Create new</a>
{% endblock %}

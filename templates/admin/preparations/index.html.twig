{% extends 'base.html.twig' %}

{% block title %}Preparations index{% endblock %}

{% block body %}
    <h1>Preparations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Etapes</th>
                <th>Ordres</th>
                <th>Date_add</th>
                <th>Date_update</th>
                <th>Date_delete</th>
                <th>Activate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for preparation in preparations %}
            <tr>
                <td>{{ preparation.id }}</td>
                <td>{{ preparation.etapes }}</td>
                <td>{{ preparation.ordres }}</td>
                <td>{{ preparation.dateAdd ? preparation.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ preparation.dateUpdate ? preparation.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ preparation.dateDelete ? preparation.dateDelete|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ preparation.activate ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('preparations_show', {'id': preparation.id}) }}">show</a>
                    <a href="{{ path('preparations_edit', {'id': preparation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('preparations_new') }}">Create new</a>
{% endblock %}

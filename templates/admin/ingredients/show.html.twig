{% extends 'admin/admin.html.twig' %}

{% block title %}Ajouter un ingredient{% endblock %}

{% block container %}
    <div class="card-body col-lg-8 m-auto">
        <h1 class="text-center mb-3 ">Ajouter un Ingrédient</h1>
        <div class="container col-5 col-xl-5">
            {{ form_start(form) }}
            <div>
                <div class="border border-dark p-3 backgroundFieldset" id="liste">
                    <div class="form-group mb-4">
                        <label for="titre">Titre:</label>
                        <input type="text" readonly class="form-control" name="titre" id="titre" value="{{ recettes.titre }}"
                               placeholder="A table" required>
                    </div>
                    <div class="form-group mb-4">
                        <label for="ingredient">Ingrédient:</label>
                        {{form_widget(form.nom)}}
                    </div>
                    <div class="form-group mb-4">
                        <label for="quantite">Quantité:</label>
                        {{form_widget(form.quantite)}}
                    </div>
                    <div class="text-right mt-3">
                        <button type="submit" class="btn btn-dark" name="Valider_Ingrédient">{{ button_label|default('Ajouter') }}</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="text-center m-5">
        <a class="btn btn-dark" href="{{ path('admin_recettes_showtwo', {'id': recettes.id}) }}">{{ button_label|default('← Retour à recette en cours') }}</a>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Ingredients index{% endblock %}

{% block body %}
    <h1>Ingredients index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Quantite</th>
                <th>Date_add</th>
                <th>Date_update</th>
                <th>Date_delete</th>
                <th>Activate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.id }}</td>
                <td>{{ ingredient.nom }}</td>
                <td>{{ ingredient.quantite }}</td>
                <td>{{ ingredient.dateAdd ? ingredient.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ingredient.dateUpdate ? ingredient.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ingredient.dateDelete ? ingredient.dateDelete|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ingredient.activate ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('ingredients_show', {'id': ingredient.id}) }}">show</a>
                    <a href="{{ path('ingredients_edit', {'id': ingredient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ingredients_new') }}">Create new</a>
{% endblock %}

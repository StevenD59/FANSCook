{% extends 'admin/admin.html.twig' %}

{% block title %}Recette en cours{% endblock %}

{% block container %}
<div class="col mx-auto p-0 m-0 divBody" id="contentFav">
    <h1 class="text-center m-5">{{ recette.titre }}</h1>
    <div class="container mb-5">
        <div class="justify-content-around row">
            <div class="col-md-3 mr-5">
                <figure>
                    <img class="border border-dark" id="liste" width="280" src="{{asset('assets/img/' ~ recette.image )}}"
                         alt="image de la recette">
                </figure>
            </div>
            <div class="col-md-7">
                <div class="divNote">
                    <div class="descrip rating">

                    </div>
                </div>
                <br><br>
                <span class="descrip">Description:</span>
                <p class="text-justify">{{ recette.descriptions }}</p>
            </div>
        </div>
    </div>

    <div class="container mb-5">
        <div class="justify-content-around row">
            <div class="ingredients col-md-3 border border-dark backgroundFieldset p-3 mb-3">
                <span class="descrip">Ingrédients:</span><br><br>
                <ul>
                {% for ingredient in ingredients %}
                    <li class="p-2">{{ ingredient.quantite }} {{ ingredient.nom }}</li>
                {% endfor %}
                </ul>
            </div>
            <div class="preparation col-md-7 p-0">
                <div class="border border-dark p-3 mb-3 backgroundFieldset"  height="80">
                    <h4 class="text-center pb-3 descrip">Temps total</h4>
                    <div class="row">
                        <h6 class="col-6 text-center">Préparation: {{ recette.tmpPrepa }}</h6>
                        <h6 class="col-6 text-center">Cuisson: {{ recette.tmpCuisson }}</h6>
                    </div>
                </div>
                <div class="prep border border-dark backgroundFieldset p-3">
                    <span class="descrip">Préparations:</span>
                    {% for preparation in preparations %}
                    <p class="p-1">{{ preparation.ordres }} - {{ preparation.etapes }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    <div class="text-right mr-5 mt-5">
        <a href="{{ path('admin_ingredients_show', {'id': recette.id}) }}" class="btn btn-dark btn" type="button">{{ button_label|default('Ingrédient +') }}</a>
        <a href="{{ path('admin_preparations_show', {'id': recette.id}) }}" class="btn btn-dark btn" type="button">{{ button_label|default('Etape +') }}</a>
        <a href="{{ path('admin') }}" class="btn btn-dark btn" type="button">{{ button_label|default('Valider') }}</a>
    </div>
    </div>
</div>

{% endblock %}

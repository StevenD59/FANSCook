{% extends 'admin/admin.html.twig' %}

{% block title %}New Articles{% endblock %}

{% block container %}


    <div class="card-body col-lg-8 mt-5 mx-auto">
        <h1 class="text-center mb-3 ">Ajouter Article</h1>


        <div class="container col-5 col-xl-5">

            {{ form_start(form) }}
            <fieldset class="border rounded p-2 backgroundFieldset">

                <div class="form-group mb-4">
                    <label for="titre">Titre:</label>
                    {{ form_widget(form.titre) }}

                </div>



                <div class="custom-file mb-3">

                    <label class="custom-file-label" for="image">Choisir une image</label>
                    {{ form_widget(form.image) }}

                </div>
                <div class="form-group">
                    <label for="article">Article:</label>
                    {{ form_widget(form.description, {'attr': {'rows': '6'}}) }}
                </div>
                <div class="text-right mt-3">
                    <button class="btn btn-dark">{{ button_label|default('Ajouter') }}</button>
                </div>
            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
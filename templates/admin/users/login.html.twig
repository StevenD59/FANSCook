{% extends 'public.html.twig' %}
{% block title %}Connexion{% endblock %}
{% block container %}
    <div class="m-5 w-50 mx-auto p-5">
        <h1 class="text-center my-4 m-5">Connexion</h1>
        <form action='{{ path('security_login') }}' method='post'>
            <div class="background_body background_form col-10 offset-1 col-lg-6 offset-lg-3 p-3 my-3 borderCo">
                <div class="form-group mb-3">
                    <label for="email">Email:</label>
                    <input type="email" id="email" class="form-control" name="_username" placeholder="E-mail">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe:</label>
                    <input type="password" id="password" class="form-control" name="_password" placeholder="Votre mot de passe">
                </div>
            </div>

            <div class="text-right pr-0 mt-5 mb-5 w-75">
                <button type="submit" class="btn btn-secondary text-white">Se connecter</button>
            </div>
        </form>
    </div>
{% endblock %}